<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/Sb_Listview_Commentimg"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/icon_profile"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/Sb_Listview_Commentperson"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="서현빈"
            android:textSize="18dp"
            android:textColor="#000000"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/Sb_Listview_Commenttext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="옷 예쁘네유옷 예쁘네유옷 예쁘네유옷 예쁘네유옷 예쁘네유옷 예쁘네유옷 예쁘네유옷 예쁘네유옷 예쁘네유옷 예쁘네유옷 예쁘네유옷 예쁘네유옷 예쁘네유옷 예쁘네유옷 예쁘네유옷 예쁘네유옷 예쁘네유옷 예쁘네유옷 예쁘네유옷 예쁘네유옷 예쁘네유옷 예쁘네유옷 예쁘네유"
            android:textSize="15dp"
            android:textColor="#000000"/>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <TextView
                android:id="@+id/Sb_Listview_Commenttime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#c8c8c8"
                android:text="시간"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>